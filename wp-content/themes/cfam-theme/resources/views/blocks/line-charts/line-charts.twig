<section class="line-charts-section custom-block lazy-container">
	<div class="container container-padding">
		{% if fields.heading %}
	    <h2 class="heading">
	    {{ fields.heading }}
	    {% if fields.add_tooltip %}
      <span class="tooltip"><i class="icon-info"></i>
        <span tooltiptext class="tooltiptext">{{ fields.tooltip_text }}</span>
    	</span>
    	{% endif %}
	  </h2>
		{% endif %}

		{% if fields.subheading %}
	    <h4>{{ fields.subheading }}</h4>
		{% endif %}

		{% if fields.description %}
		<div class="description text-paragraph--small mt-0">
	    <p>{{ fields.description }}</p>
	  </div>
		{% endif %}

		<div class="line-chart-responsive" >
			<div class="line-chart-container hypothetical-growth-chart-container">
				<canvas id="hypothetical-growth-line-chart" height="256"></canvas>
			</div>
		</div>	

			
	</div>
</section>