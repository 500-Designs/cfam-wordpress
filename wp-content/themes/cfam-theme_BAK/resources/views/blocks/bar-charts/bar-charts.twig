<section class="bar-charts custom-block lazy-container {{ block.className }}">
	<div class="container container-padding">
		{% if fields.heading %}
	    <h2 class="heading">{{ fields.heading }}</h2>
		{% endif %}

		{% if fields.subheading %}
	    <h4>{{ fields.subheading }}</h4>
		{% endif %}

		{% if fields.description %}
		<div class="description text-paragraph--small">
	    <p>{{ fields.description }}</p>
	  </div>
		{% endif %}

		<div class="chart-responsive" >
		<div class="chart-container" >
			<canvas id="{{ fields.chart }}" height="256"></canvas>
		</div>
		</div>	
	</div>
</section>